{
    "manifest_version": 2,
    "name": "Quicklink Firefox Extension",
    "version": "0.1.3",
    "description": "Speed up navigations by prefetching links with Google Chrome Labs' Quicklink script.",
    "homepage_url": "https://github.com/spikespaz/firefox-quicklink",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "permissions": [
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "run_at": "document_idle",
            "js": [
                "quicklink.umd.js",
                "init.js"
            ]
        }
    ],
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "web_accessible_resources": [
        "data/conifg.json"
    ]
}